{
  "include": ["src/index.ts", "src/globals.d.ts"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noEmit": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "types": ["vitest/globals", "vite/client"],
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  }
}
